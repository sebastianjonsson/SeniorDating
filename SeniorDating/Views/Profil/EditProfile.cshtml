@model SeniorDating.Models.ApplicationUser
@using SeniorDating.Models;

@{
    ViewBag.Title = "Edit Profile";
}

<h2>Edit Profile</h2>
<br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.Age, new { @class = "col-md-2 control-label" })
                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.About, new { @class = "col-md-2 control-label" }) 
                @Html.EditorFor(model => model.About, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        <br />
        <div class="form-group">
            @Html.Label("Hidden on search", new { @class = "col-md-2 control-label" })
                @Html.EditorFor(model => model.Hidden, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <br />
    <div class="form-group">
        @Html.ActionLink("Change your password", "ChangePassword", "Manage", new { @class = "col-md-2 control-label" })
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
    
}

